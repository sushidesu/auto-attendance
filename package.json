{
  "name": "auto-attendance",
  "license": "MIT",
  "scripts": {
    "postbuild": "cpx appsscript.json dist",
    "build": "esbuild --platform=node --bundle src/index.ts --outdir=dist",
    "clean": "rimraf dist",
    "push": "clasp push",
    "deploy": "run-s clean build push",
    "prettier": "prettier --write \"**/*.{js,ts}\""
  },
  "dependencies": {
    "@google/clasp": "^2.3.0"
  },
  "devDependencies": {
    "@types/google-apps-script": "^1.0.16",
    "@types/node": "^14.14.21",
    "cpx": "^1.5.0",
    "esbuild": "^0.8.33",
    "husky": "^4.3.8",
    "inquirer": "6.0.0",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write"
  }
}
